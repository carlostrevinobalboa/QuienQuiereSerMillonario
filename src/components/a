        (
            respuesta.numero === preguntaMarcada
            ?
            (
                preguntaCorrecta === true
                ?
                <label className="px-3 py-1 rounded-lg font-bold text-black bg-green-400" >
                    <input type='radio' name={preguntas[index].id} onChange={() => setPreguntaMarcada(respuesta.numero)} value={respuesta.texto} /> {respuesta.texto}
                </label>
                :
                <label className="px-3 py-1 rounded-lg font-bold text-black bg-orange-600" >
                    <input type='radio' name={preguntas[index].id} onChange={() => setPreguntaMarcada(respuesta.numero)} value={respuesta.texto} /> {respuesta.texto}
                </label>
            )
            :
                <label className="px-3 py-1 rounded-lg font-bold text-black bg-slate-400" >
                    <input type='radio' disabled={true} name={preguntas[index].id} onChange={() => setPreguntaMarcada(respuesta.numero)} value={respuesta.texto} /> {respuesta.texto}
                </label>
        )